@{
}

@model IEnumerable<Member>

<h2>Miembros del Gimnasio</h2>
<a class="btn btn-primary" asp-action="Create">Agregar Miembro</a>

<table class="table-striped mt-3 table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Fecha de Ingreso</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FullName</td>
                <td>@member.Email</td>
                <td>@member.JoinDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@member.Id">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@member.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
